{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "target": "es2015",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "removeComments": false,
    "preserveSymlinks": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2015", "esnext.array", "es2016.array.include"],
    "baseUrl": "./packages",
    "paths": {
      "@xethya/*": ["./*/src/index.ts"]
    },
    "skipLibCheck": true
  }
}
